        {
          "name": "Login Super Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "",
                  "// 1. Simpan Access Token",
                  "if (jsonData.access_token) {",
                  "    pm.collectionVariables.set(\"token\", jsonData.access_token);",
                  "    console.log(\"Token updated automatically\");",
                  "}",
                  "",
                  "// 2. Simpan User ID (Asumsi response ada object user: { id: 1 })",
                  "if (jsonData.user && jsonData.user.id) {",
                  "    pm.collectionVariables.set(\"userId\", jsonData.user.id);",
                  "    console.log(\"User ID updated automatically: \" + jsonData.user.id);",
                  "} else {",
                  "    console.log(\"User ID not found in response. Make sure backend returns user object.\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"super@admin.com\",\n    \"password\": \"password\",\n    \"rememberMe\": true\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          },
          "response": []
        },
