    {
      "name": "Whatsapp",
      "item": [
        {
          "name": "Start Session (Get QR)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.sessionId) {",
                  "    pm.collectionVariables.set(\"sessionId\", jsonData.sessionId);",
                  "    console.log(\"Session ID saved: \" + jsonData.sessionId);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"userId\": {{userId}}\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/whatsapp/start",
              "host": ["{{baseUrl}}"],
              "path": ["whatsapp", "start"]
            },
            "description": "Menggunakan userId yang didapat otomatis dari Login."
          },
          "response": []
        },
        {
          "name": "Send Message (Form Data)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "sessionId",
                  "value": "{{sessionId}}",
                  "type": "text"
                },
                {
                  "key": "to",
                  "value": "628123456789",
                  "type": "text"
                },
                {
                  "key": "message",
                  "value": "Halo, ini pesan via Form Data",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": ""
                },
                {
                  "key": "mediaType",
                  "value": "image",
                  "type": "text",
                  "description": "image | video | document"
                },
                {
                  "key": "fileName",
                  "value": "gambar.png",
                  "type": "text",
                  "description": "Wajib diisi jika mediaType = document"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/whatsapp/send",
              "host": ["{{baseUrl}}"],
              "path": ["whatsapp", "send"]
            }
          },
          "response": []
        },
